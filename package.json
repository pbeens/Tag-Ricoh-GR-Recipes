{
  "name": "tag-ricoh-gr-recipes",
  "version": "1.0.0",
  "description": "A collection of tools and images for discovering and managing Ricoh GR IV image processing \"recipes\".",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "fetch:exiftool:mac": "bash scripts/fetch_exiftool_macos.sh",
    "pack": "electron-vite build && electron-builder --dir",
    "dist": "electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.0.0",
    "electron-vite": "^5.0.0",
    "lucide-react": "^0.563.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "build": {
    "appId": "com.ricoh.gr.tagger",
    "productName": "Ricoh GR Image Tagger",
    "files": [
      "out/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/exiftool-mac",
        "to": "exiftool-mac"
      },
      {
        "from": "resources/exiftool.exe",
        "to": "exiftool.exe"
      },
      {
        "from": "resources/exiftool_files",
        "to": "exiftool_files"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.photography"
    }
  }
}